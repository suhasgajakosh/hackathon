package maxes;

public class MaxesOfArray {

	public static void main(String[] args) {

		int[] arr1 = new int[4];
		arr1 [0] = 2;
		arr1 [1] = 3;
		arr1 [2] = 4;
		arr1 [3] = 5;
		
		int[] arr2 = new int[2];
		arr2 [0] = 2;
		arr2 [1] = 4;
		
		int[] arr3 = getMaxesOfArray(arr1, arr2); 
		for (int i : arr3) {
			System.out.println(i);
		}
	}

	private static int[] getMaxesOfArray(int[] arr1, int[] arr2) {
		int size = 0;
		if (arr1.length > arr2.length) {
			size = arr1.length;
		} else {
			size = arr2.length;
		}
		int[] arr = new int[size]; 
		int max = getMax(arr2);
		arr = getUnionOfArrays(arr1, arr2, arr, max, size);
		return arr;
	}

	private static int[] getUnionOfArrays(int[] arr1, int[] arr2, int[] arr, int max, int size) {

		for (int i = 0, j = 0; i < size || j < size; i++, j++) {
			if (arr1[i] < arr2[j]) {
				if (max < arr1[i]) 
				arr[i] = arr1[i];
			} else if (arr2[j] < arr1[i]) {
				if (max < arr2[i]) 
				arr[i] = arr2[j];
			} else if (arr1[i] == arr2[j]){
				arr[i] = arr1[i];
			}
		}
		return null;
	}

	private static int getMax(int[] arr2) {
		
		int max = 0;
		for (int i : arr2) {
			if (max < i) {
				max = i;
			}
		}		
		return max;
		
	}

}
